<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardAhorro"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="3dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvCardNombreAhorro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/todo_background_card"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvCardMontoMetaAhorro"
            >
        </TextView>

        <TextView
            android:id="@+id/tvCardMontoMetaAhorro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="viewEnd"
            android:textColor="@color/todo_background_card"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintStart_toEndOf="@id/tvCardNombreAhorro"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

        </TextView>

        <TextView
            android:id="@+id/tvCardMontoAhorro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:textColor="@color/todo_other_category"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCardNombreAhorro"
            app:layout_constraintEnd_toStartOf="@+id/tvCardMontoFaltanteAhorro">
        </TextView>

        <TextView
            android:id="@+id/tvCardMontoFaltanteAhorro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="viewEnd"
            android:textColor="@color/obesidad"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvCardMontoMetaAhorro"
            app:layout_constraintStart_toEndOf="@+id/tvCardMontoAhorro"
            app:layout_constraintEnd_toEndOf="parent">
        </TextView>

        <TextView
            android:id="@+id/tvCardFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/todo_background_card"
            app:layout_constraintTop_toBottomOf="@id/tvCardMontoAhorro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>